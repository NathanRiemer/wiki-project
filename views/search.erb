<h1>Search</h1>

<form>
  <input type="text" name="q">
  <input type="radio" name="in" value="articles">Article Title
  <input type="radio" name="in" value="content">Article Content
  <input type="radio" name="in" value="categories">Category Title
  <input type="submit">
</form>

<% if @results %>
  <ul>
    <% @results.each do |result| %>
      <li><a href="<%= result.path %>"><%= result.title %></a></li>
    <% end %>
  </ul>
<% end %>